<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.Shopping">

    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/myRecyclerView"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/viewPager"/>
    <SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:iconifiedByDefault="false"
            android:queryHint="@string/home_search_hint"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:id="@+id/mySearchView"/>
    <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/mySearchView"
            app:layout_constraintStart_toStartOf="@+id/mySearchView"
            app:layout_constraintEnd_toEndOf="@+id/mySearchView"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:id="@+id/viewPager"/>
    <android.support.v7.widget.CardView
            android:id="@+id/cart_layout"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardCornerRadius="30dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/availabilityColor"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent">

        <FrameLayout
                android:id="@+id/pending_notification"
                style="?attr/actionButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="end|bottom"
                android:clipToPadding="false">

            <ImageView
                    android:id="@+id/cart_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="8dp"
                    android:tint="@color/colorCart"
                    app:srcCompat="@drawable/ic_shopping_cart_black_24dp"/>

            <TextView
                    android:id="@+id/count_badge_notification"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="end|bottom"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="0dp"
                    android:visibility="visible"
                    android:background="@drawable/round_button_badge"
                    android:gravity="top"
                    android:padding="3dp"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"/>

        </FrameLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>