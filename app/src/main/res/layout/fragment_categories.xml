<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".fragments.Categories">

    <SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/appBarLayout3"
            android:layout_marginTop="8dp"
            android:iconifiedByDefault="false"
            android:queryHint="@string/categories_search_hint"
            app:layout_constraintTop_toBottomOf="@+id/appBarLayout3"
            app:layout_constraintStart_toStartOf="@+id/appBarLayout3"
            android:layout_marginStart="8dp"
            android:id="@+id/searchView" android:layout_marginEnd="8dp"/>

    <TextView
            android:id="@+id/catTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/cat_label"
            android:textColor="@color/colorBlack"
            app:layout_constraintTop_toBottomOf="@+id/searchView"
            app:layout_constraintStart_toStartOf="@+id/searchView"
            app:layout_constraintEnd_toEndOf="@+id/searchView"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="32dp"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/mRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/searchView"
            app:layout_constraintEnd_toEndOf="@+id/searchView"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/catTextView" android:layout_marginTop="24dp"
            android:layout_marginStart="8dp"/>


</android.support.constraint.ConstraintLayout>